{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@sdk/*": ["packages/api/src/*"],
      "@ui/*": ["packages/ui/src/*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  }
}
